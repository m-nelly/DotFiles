# reload config
alt + Escape
	pkill -USR1 -x sxhkd

# quit or restart bspwm
alt + shift + {q,r}
	bspc {quit, wm -r}

# close or kill a window
alt + {_,shift +} w
	bspc node -{c,k}

# resize windows
alt + shift + {Left,Down,Up,Right}
	bspc node -z {left -20 0, bottom 0 20, top 0 -20, right 20 0}

# create new terminal 
ctrl + alt + t
	urxvt
# workspaces
super + {_,shift +}{1-6}
	bspc {desktop -f, node -d} '^{1-6}' --follow
ctrl + shift  + {Left,Right}
	bspc desktop -f {prev,next}.local
# kill session
super + l
	bspc quit
# screenshot
Print
	flameshot gui
# rofi launcher
alt + @space
	rofi -show drun
